{
  "manifest_version": 3,
  "name": "OpenHighlighter",
  "version": "1.0.1",
  "description": "OpenHighlighter is a source available extension that quickly highlights multiple search words, keywords, or phrases on any webpage. Search and visually mark important terms in real time.",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["injected-network-patch.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
